{
    "compilerOptions": {
        "outDir": "./output/",
        "allowJs": true,
        "sourceMap": true,
        "module": "esnext",
        "target": "esnext",
        "lib": ["dom", "es2017"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strict": false
    },
    "include": ["types"]
}
